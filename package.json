{
  "name": "smart-truncate",
  "description": "Truncates text in selected layers, symbol overrides or even all overrides of all instances of selected symbol master to given length.",
  "author": "Ozgur Gunes",
  "authorEmail": "o.gunes@gmail.com",
  "homepage": "https://github.com/ozgurgunes/Sketch-Smart-Truncate",
  "license": "MIT",
  "version": "0.2.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/ozgurgunes/Sketch-Smart-Truncate.git"
  },
  "bugs": {
    "url": "https://github.com/ozgurgunes/Sketch-Smart-Truncate/issues"
  },
  "engines": {
    "sketch": ">=52"
  },
  "skpm": {
    "name": "Smart Truncate",
    "manifest": "src/manifest.json",
    "main": "smart-truncate.sketchplugin",
    "assets": [
      "assets/**/*"
    ]
