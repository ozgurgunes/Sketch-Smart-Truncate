    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-sketch": "^0.2.4",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.2.1"
  },
  "dependencies": {
    "@ozgurgunes/sketch-plugin-analytics": "^0.5.3",
    "@ozgurgunes/sketch-plugin-ui": "^0.5.0"
